# =============================================================================
# SABQ AI CMS - Environment Variables Configuration
# =============================================================================

# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/sabq_ai_cms?schema=public"
DATABASE_TEST_URL="postgresql://username:password@localhost:5432/sabq_ai_cms_test?schema=public"

# AUTHENTICATION & SECURITY
# =============================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here-change-this-in-production"
JWT_SECRET="your-jwt-secret-key-here-change-this-in-production"
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# SUPABASE CONFIGURATION
# =============================================================================
SUPABASE_URL="https://your-project-id.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# CLOUDINARY CONFIGURATION
# =============================================================================
CLOUDINARY_CLOUD_NAME="sabq-ai"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"
CLOUDINARY_UPLOAD_PRESET="sabq-ai-uploads"

# AI SERVICES CONFIGURATION
# =============================================================================
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# EMAIL CONFIGURATION
# =============================================================================
EMAIL_PROVIDER="smtp"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-email-password"
SMTP_FROM="نسبة سبق الذكية <noreply@sabq.ai>"

# SMS CONFIGURATION
# =============================================================================
SMS_PROVIDER="twilio"
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# REDIS CONFIGURATION (for caching and sessions)
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="your-redis-password"

# ANALYTICS CONFIGURATION
# =============================================================================
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
FACEBOOK_PIXEL_ID="your-facebook-pixel-id"

# PAYMENT CONFIGURATION
# =============================================================================
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# SEARCH CONFIGURATION
# =============================================================================
ALGOLIA_APP_ID="your-algolia-app-id"
ALGOLIA_API_KEY="your-algolia-api-key"
ALGOLIA_INDEX_NAME="sabq_ai_articles"

# MONITORING & LOGGING
# =============================================================================
SENTRY_DSN="your-sentry-dsn"
LOG_LEVEL="info"
ENABLE_DEBUG="false"

# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="900000"  # 15 minutes in milliseconds

# BACKUP CONFIGURATION
# =============================================================================
BACKUP_PROVIDER="s3"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="sabq-ai-backups"

# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS="http://localhost:3000,https://sabq.ai,https://www.sabq.ai"

# CONTENT DELIVERY NETWORK
# =============================================================================
CDN_URL="https://cdn.sabq.ai"
CDN_PROVIDER="cloudinary"

# FEATURE FLAGS
# =============================================================================
ENABLE_ANALYTICS="true"
ENABLE_PUSH_NOTIFICATIONS="true"
ENABLE_RECOMMENDATIONS="true"
ENABLE_COMMENTS="true"
ENABLE_LOYALTY_POINTS="true"
ENABLE_AUDIT_LOGS="true"
ENABLE_BACKUP_JOBS="true"

# LOCALIZATION
# =============================================================================
DEFAULT_LOCALE="ar-SA"
SUPPORTED_LOCALES="ar-SA,en-US"
TIMEZONE="Asia/Riyadh"

# PERFORMANCE OPTIMIZATION
# =============================================================================
ENABLE_CACHING="true"
CACHE_TTL="300"  # 5 minutes
ENABLE_COMPRESSION="true"
ENABLE_MINIFICATION="true"

# PRIVACY & GDPR
# =============================================================================
ENABLE_PRIVACY_CONTROLS="true"
ENABLE_GDPR_COMPLIANCE="true"
PRIVACY_POLICY_URL="https://sabq.ai/privacy"
TERMS_OF_SERVICE_URL="https://sabq.ai/terms"

# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_SECRET="your-webhook-secret"
WEBHOOK_ENDPOINTS="https://sabq.ai/api/webhooks"

# QUEUE CONFIGURATION
# =============================================================================
QUEUE_PROVIDER="redis"
QUEUE_DEFAULT_JOB_TIMEOUT="30000"  # 30 seconds
QUEUE_RETRY_ATTEMPTS="3"

# SOCIAL MEDIA INTEGRATION
# =============================================================================
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET="your-twitter-api-secret"
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# SECURITY HEADERS
# =============================================================================
ENABLE_SECURITY_HEADERS="true"
ENABLE_CSRF_PROTECTION="true"
ENABLE_HELMET="true"

# DEVELOPMENT CONFIGURATION
# =============================================================================
NODE_ENV="development"
PORT="3000"
ENABLE_HOT_RELOAD="true"
ENABLE_SOURCE_MAPS="true"

# TESTING CONFIGURATION
# =============================================================================
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/sabq_ai_cms_test?schema=public"
TEST_REDIS_URL="redis://localhost:6379/1"
ENABLE_TEST_COVERAGE="true"

# NOTIFICATION SERVICES
# =============================================================================
PUSH_NOTIFICATION_PROVIDER="firebase"
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_PRIVATE_KEY="your-firebase-private-key"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"

# CONTENT MODERATION
# =============================================================================
ENABLE_CONTENT_MODERATION="true"
MODERATION_PROVIDER="openai"
MODERATION_THRESHOLD="0.7"

# MAINTENANCE MODE
# =============================================================================
MAINTENANCE_MODE="false"
MAINTENANCE_MESSAGE="نحن نعمل على تحسين الخدمة. سنعود قريباً."

# =============================================================================
# IMPORTANT NOTES:
# =============================================================================
# 1. Never commit real API keys or secrets to version control
# 2. Use strong, unique passwords for all services
# 3. Enable 2FA on all external services
# 4. Regularly rotate API keys and secrets
# 5. Use environment-specific configurations
# 6. Test all configurations before deploying to production
# 7. Monitor usage and set up alerts for unusual activity
# 8. Keep backups of your configuration files
# 9. Document any custom environment variables
# 10. Use encrypted environment variables in production
# ============================================================================= 